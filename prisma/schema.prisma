generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Language {
  id   Int    @id @default(autoincrement())
  name String
  shortCode String
  books Book[]
}

model Book {
  id              Int      @id @default(autoincrement())
  author          String
  torrentHash     String
  publicationDate DateTime
  pages           Int
  title           String
  description     String
  sinopsis        String
  seriesId        Int
  series          BookSeries @relation(fields: [seriesId], references: [id])
  languageId      Int
  language        Language   @relation(fields: [languageId], references: [id])
}

model BookSeries {
  id   Int    @id @default(autoincrement())
  name String
  description String
  books Book[]
}
